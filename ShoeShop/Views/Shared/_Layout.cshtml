<!DOCTYPE HTML>
<html>
<head>
    <title>Minh Nguyệt Shop</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Rokkitt:100,300,400,700" rel="stylesheet">
    <link rel="shortcut icon" href="#" />
    <!-- Animate.css -->
    <link rel="stylesheet" href="/Scripts/Client/css/animate.css">
    <!-- Icomoon Icon Fonts-->
    <link rel="stylesheet" href="/Scripts/Client/css/icomoon.css">
    <!-- Ion Icon Fonts-->
    <link rel="stylesheet" href="/Scripts/Client/css/ionicons.min.css">
    <!-- Bootstrap  -->
    <link rel="stylesheet" href="/Scripts/Client/css/bootstrap.min.css">

    <!-- Magnific Popup -->
    <link rel="stylesheet" href="/Scripts/Client/css/magnific-popup.css">

    <!-- Flexslider  -->
    <link rel="stylesheet" href="/Scripts/Client/css/flexslider.css">

    <!-- Owl Carousel -->
    <link rel="stylesheet" href="/Scripts/Client/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/Scripts/Client/css/owl.theme.default.min.css">

    <!-- Date Picker -->
    <link rel="stylesheet" href="/Scripts/Client/css/bootstrap-datepicker.css">
    <!-- Flaticons  -->
    <link rel="stylesheet" href="/Scripts/Client/fonts/flaticon/font/flaticon.css">

    <!-- Theme style  -->
    <link href="~/Scripts/Client/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="~/Scripts/Client/css/google.css" rel="stylesheet" />
    <link href="~/Scripts/Client/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Scripts/Client/css/product.css">
    <link href="~/Scripts/Client/css/other.css" rel="stylesheet" />

</head>

<body>

    <div class="colorlib-loader"></div>

    <div id="page">
        <nav class="colorlib-nav" role="navigation">
            <div class="top-menu">
                <div class="container">
                    @{Html.RenderPartial("/Views/Shared/_Logo.cshtml"); }
                    <div class="row">
                        <div class="col-sm-12 text-left menu-1">
                            <ul>
                                <!--Page Link-->
                                <li @RenderSection("isHome", required: false)><a href="/home">Home</a></li>
                                <li @RenderSection("isMen", required: false)><a href="/men">Men</a></li>
                                <li @RenderSection("isWomen", required: false)><a href="/women">Women</a></li>
                                <li @RenderSection("isSearch", required: false)><a href="/search">Search</a></li>
                                <li @RenderSection("isAbout", required: false)><a href="/about">About</a></li>
                                <li @RenderSection("isContact", required: false)><a href="/contact">Contact</a></li>
                                <li class="cart">
                                    <a href="/cart">
                                        <i class="icon-shopping-cart"></i>
                                        Cart [
                                        @(Session["CartSection"] == null ? 0 : ((List<ShoeShop.Models.CartItem>)Session["CartSection"]).Count)
                                        ]
                                    </a>
                                </li>

                                @if (Session["User"] != null)
                                {
                                    <li class="has-dropdown cart">
                                        <a href="#"><i class="fa fa-user"></i> @(((ShopDao.EF.User)Session["User"]).Name)</a> 
                                        <ul class="dropdown">
                                            <li><a href="#"><i class="fa fa-user"></i>  Profile</a></li>
                                            <li><a href="/log-out"><i class="fa fa-sign-out"></i> Log Out</a></li>
                                        </ul>
                                    </li>
                                }
                                else
                                {
                                    <li class="cart">
                                        <a href="/login"><i class="fa fa-sign-in"></i> Login</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--Event Bar-->
            @{Html.RenderPartial("/Views/Shared/_Event.cshtml"); }
        </nav>

        @RenderSection("Slider", required: false)

        @RenderBody()

        @RenderSection("Partner", required: false)

        @{Html.RenderPartial("/Views/Shared/_Footer.cshtml"); }
    </div>

    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="ion-ios-arrow-up"></i></a>
    </div>

    <!-- jQuery -->
    <script src="/Scripts/Client/js/jquery.min.js"></script>
    <!-- popper -->
    <script src="/Scripts/Client/js/popper.min.js"></script>
    <!-- bootstrap 4.1 -->
    <script src="/Scripts/Client/js/bootstrap.min.js"></script>
    <!-- jQuery easing -->
    <script src="/Scripts/Client/js/jquery.easing.1.3.js"></script>
    <!-- Waypoints -->
    <script src="/Scripts/Client/js/jquery.waypoints.min.js"></script>
    <!-- Flexslider -->
    <script src="/Scripts/Client/js/jquery.flexslider-min.js"></script>
    <!-- Owl carousel -->
    <script src="/Scripts/Client/js/owl.carousel.min.js"></script>
    <!-- Magnific Popup -->
    <script src="/Scripts/Client/js/jquery.magnific-popup.min.js"></script>
    <script src="/Scripts/Client/js/magnific-popup-options.js"></script>
    <!-- Date Picker -->
    <script src="/Scripts/Client/js/bootstrap-datepicker.js"></script>
    <!-- Stellar Parallax -->
    <script src="/Scripts/Client/js/jquery.stellar.min.js"></script>
    <!-- Main -->
    <script src="/Scripts/Client/js/main.js"></script>

    @RenderSection("jsFooter", required: false)
</body>
</html>


