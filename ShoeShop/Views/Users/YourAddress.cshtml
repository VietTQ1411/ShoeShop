
@{
    ViewBag.Title = "YourAddress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col">
                <p class="bread">
                    <span><a href="/home">Home</a></span> /
                    <span><a href="/profile">My Profile</a></span> /<span>Login and Security</span>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="colorlib-product">
    <div class="container order">
        @using (Html.BeginForm("YourAddress", "Users", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger col-6" });
            <div class="form-horizontal">
                <div class="form-group col-6">
                    <input type="text" id="" class="form-control" name="oldpass" placeholder="Address">
                </div>
                <div class="form-group col-6">
                    <input type="text" id="" class="form-control" name="newpass" placeholder="Phone number">
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Change" class="btn btn-dark" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

