@model List<ShopDao.EF.OrderDetail>
@{
    ViewBag.Title = "MyOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col">
                <p class="bread"><span><a href="/home">Home</a></span> / <span><a href="/profile">My Profile</a></span> / <span>My Order</span></p>
            </div>
        </div>
    </div>
</div>


<div class="colorlib-product">
    <div class="container">
        <div class="row row-pb-lg">
            <div class="col-md-12">
                @if (Model.Count > 0)
                {
                    <div class="product-name d-flex">
                        <div class="one-there text-left">
                            <span>Bill Code</span>
                        </div>
                        <div class="one-eight text-center">
                            <span>Order Date</span>
                        </div>
                        <div class="one-eight text-center">
                            <span>Receiver</span>
                        </div>
                        <div class="one-eight text-center">
                            <span>Local</span>
                        </div>
                        <div class="one-eight text-center px-4">
                            <span>Ship Date</span>
                        </div>
                        <div class="one-eight text-center px-4">
                            <span>Status</span>
                        </div>

                    </div>
                    foreach (var item in Model)
                    { <div class="product-cart d-flex pb-0">
                            <div class="one-there">
                                <div class="display-tc pl-5">
                                    <h4>@item.AccessCode@item.ID</h4>
                                </div>
                            </div>
                            <div class="one-eight text-center">
                                <div class="display-tc">
                                    <h5>@item.CreateDate.ToString()</h5>
                                </div>
                            </div>
                            <div class="one-eight text-center">
                                <div class="display-tc display-quantity">
                                    <h5>@item.ShipName</h5>
                                </div>
                            </div>
                            <div class="one-eight text-center">
                                <div class="display-tc">
                                    <h5>@item.ShipAddress</h5>
                                </div>
                            </div>
                            <div class="one-eight text-center">
                                <div class="display-tc">
                                    <h5>Đang xử lý</h5>
                                </div>
                            </div>
                            <div class="one-eight  text-center">
                                <div class="display-tc order-view">
                                    <h5>Đang xử lý</h5>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <h2>Bạn chưa có đơn hàng nào </h2>
                }


            </div>
        </div>
    </div>
</div>


