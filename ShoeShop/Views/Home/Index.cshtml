@model List<ShopDao.EF.Product>

@{
    var quickView = (ShopDao.EF.Product)ViewBag.quickView;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Slider{
    @{Html.RenderAction("Slider", "Home");}
}
@section isHome{
    class="active"
}
@section jsFooter{
    <script src="~/Scripts/JS/QuickView.js"></script>
}
<div class="colorlib-product">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 offset-sm-2 text-center colorlib-heading">
                <h2>Best Sellers</h2>
            </div>
        </div>
        <div class="row row-pb-md">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 mb-4 text-center">
                    <div class="product-entry border">
                        <a href="/san-pham/@item.ID" class="prod-img">
                            <img src="/images/@item.Image" class="img-fluid" alt="@item.MetaTitle">
                        </a>
                        <div class="product__content">
                            <div class="desc">
                                <h2><a>@item.Name</a></h2>
                                <ul class="prize d-flex">
                                    <li>@(item.PromotionPrice == null ? "$"+@item.Price : "$" + (double)(item.Price-(item.Price*item.PromotionPrice/100)))</li>
                                    <li class="old_prize">@(item.PromotionPrice==null?"":"$"+item.Price)</li>
                                </ul>
                            </div>
                            <div class="action">
                                <div class="actions_inner">
                                    <ul class="add_to_links">
                                        <li><a class="cart" href="/them-gio-hang?productID=@item.ID&quantity=1"><i class="fa fa-cart-plus"></i></a></li>
                                        <li><a class="wishlist" href="wishlist.html"><i class="fa fa-heart"></i></a></li>
                                        <li><a data-toggle="modal" data-id="@item.ID" title="Quick View" class="quickview modal-view detail-link" href="#productmodal"><i class="fa fa-search"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <p><a href="/search" class="btn btn-primary btn-lg">Shop All Products</a></p>
            </div>
        </div>
    </div>
</div>
<!-- QUICKVIEW PRODUCT -->
<div id="quickview-wrapper">
    <!-- Modal -->
    <div class="modal fade" id="productmodal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal__container" role="document">
            <div class="modal-content">
                <div class="modal-header modal__header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <div class="modal-product">
                        <!-- Start product images -->
                        <div class="product-images">
                            <div class="main-image images">
                                <img id="model_images" alt="big images" src="images/item-1.jpg">
                            </div>
                        </div>
                        <!-- end product images -->
                        <div class="product-info">
                            <a id="model_view_detail" href="#"> <h1 id="model_name"></h1></a>
                            <div class="rating__and__review">
                                <ul class="rating">
                                    <li><span class="ti-star"></span></li>
                                    <li><span class="ti-star"></span></li>
                                    <li><span class="ti-star"></span></li>
                                    <li><span class="ti-star"></span></li>
                                    <li><span class="ti-star"></span></li>
                                </ul>
                                <div class="review">
                                    <a href="#">4 customer reviews</a>
                                </div>
                            </div>
                            <div class="price-box-3">
                                <div class="s-price-box">
                                    <span class="new-price" id="model_new_price"></span>
                                    <span class="old-price" id="model_old_price"></span>
                                </div>
                            </div>
                            <div class="quick-desc" id="model_description">

                            </div>
                            <div class="select__color">
                                <h2>Select color</h2>
                                <ul class="color__list">
                                    <li class="red"><a title="Red" href="#">Red</a></li>
                                    <li class="gold"><a title="Gold" href="#">Gold</a></li>
                                    <li class="orange"><a title="Orange" href="#">Orange</a></li>
                                    <li class="orange"><a title="Orange" href="#">Orange</a></li>
                                </ul>
                            </div>
                            <div class="select__size">
                                <h2>Select size</h2>
                                <ul class="color__list">
                                    <li class="l__size"><a title="L" href="#">L</a></li>
                                    <li class="m__size"><a title="M" href="#">M</a></li>
                                    <li class="s__size"><a title="S" href="#">S</a></li>
                                    <li class="xl__size"><a title="XL" href="#">XL</a></li>
                                    <li class="xxl__size"><a title="XXL" href="#">XXL</a></li>
                                </ul>
                            </div>
                            <div class="social-sharing">
                                <div class="widget widget_socialsharing_widget">
                                    <h3 class="widget-title-modal">Share this product</h3>
                                    <ul class="social__net social__net--2 d-flex justify-content-start">
                                        <li class="facebook"><a href="#" class="rss social-icon"><i class="zmdi zmdi-rss"></i></a></li>
                                        <li class="linkedin"><a href="#" class="linkedin social-icon"><i class="zmdi zmdi-linkedin"></i></a></li>
                                        <li class="pinterest"><a href="#" class="pinterest social-icon"><i class="zmdi zmdi-pinterest"></i></a></li>
                                        <li class="tumblr"><a href="#" class="tumblr social-icon"><i class="zmdi zmdi-tumblr"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 ">
                                    <p><a href="#" id="model_add_to_cart" class="btn btn-primary btn-lg">Add to Cart</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END QUICKVIEW PRODUCT -->
@section Partner{
    @{Html.RenderPartial("/Views/Shared/_Partner.cshtml"); }
}

